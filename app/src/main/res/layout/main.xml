<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="156dp"
        android:background="@drawable/border"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:id="@+id/relative1">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:text="Sensor 1 : "
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Sensor 2 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Sensor 3 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Sensor 4 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Detected"
            android:textColor="#ffff"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Detected"
            android:textColor="#ffff"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginLeft="120dp"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Detected"
            android:textColor="#ffff"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Detected"
            android:textColor="#ffff"
            android:layout_alignBottom="@+id/textView8"
            android:layout_marginLeft="120dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ralative2"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/relative1">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Port Number"
            android:textColor="#ffffff" />

        <EditText
            android:layout_marginLeft="100dp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:background="#fff"
            android:hint="e.g. 192.168.0.10"
            android:id="@+id/editTextIPAddress" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address"
            android:textColor="#fff" />

        <EditText
            android:layout_alignBottom="@id/textView10"
            android:layout_marginLeft="100dp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:inputType="number"
            android:ems="10"
            android:background="#fff"
            android:hint="e.g. 80"
            android:id="@+id/editTextPortNumber" />
        <EditText
            android:layout_alignBottom="@id/textView10"
            android:layout_marginLeft="1dp"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:inputType="number"
            android:ems="10"
            android:hint="e.g. 80"
            android:id="@+id/z"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="114dp"
        android:src="@drawable/home"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="123dp"
        android:src="@drawable/power"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />


</RelativeLayout>