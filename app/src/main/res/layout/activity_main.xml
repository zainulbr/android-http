<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.risyat.skrpsi.MainActivity"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="156dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@drawable/border">

        <TextView
        android:id="@+id/tabelsensor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="Sensor 1 : "
        android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tabelsensor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Sensor 2 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/tabelsensor1"
            android:layout_alignStart="@+id/tabelsensor1" />

        <TextView
            android:id="@+id/tabelsensor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Sensor 3 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/tabelsensor2"
            android:layout_alignStart="@+id/tabelsensor2" />

        <TextView
            android:id="@+id/tabelsensor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Sensor 4 : "
            android:textColor="#ffffff"
            android:layout_below="@+id/tabelsensor3"
            android:layout_alignStart="@+id/tabelsensor3" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/home"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="229dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="123dp"
        app:srcCompat="@drawable/power"
        tools:layout_editor_absoluteY="355dp"
        tools:layout_editor_absoluteX="105dp" />
</android.support.constraint.ConstraintLayout>
